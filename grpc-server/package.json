{
  "name": "quikdb-contracts-grpc-server",
  "version": "1.0.0",
  "description": "gRPC server for QuikDB smart contracts",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && mkdir -p dist/generated && cp src/generated/*.js dist/generated/",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "proto:gen": "mkdir -p src/generated && grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./src/generated --grpc_out=grpc_js:./src/generated --plugin=protoc-gen-grpc=./node_modules/.bin/grpc_tools_node_protoc_plugin --proto_path=./proto ./proto/common.proto ./proto/user.proto ./proto/node.proto ./proto/health.proto ./proto/events.proto ./proto/stats.proto",
    "proto:gen:ts": "mkdir -p src/generated && grpc_tools_node_protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --ts_out=grpc_js:./src/generated --proto_path=./proto ./proto/common.proto ./proto/user.proto ./proto/node.proto ./proto/health.proto ./proto/events.proto ./proto/stats.proto",
    "clean": "rm -rf dist && rm -rf src/generated",
    "test": "jest",
    "test:watch": "jest --watch",
    "example": "ts-node examples/client.ts",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker build -t quikdb-grpc-server .",
    "docker:run": "docker run -p 50051:50051 quikdb-grpc-server"
  },
  "keywords": [
    "grpc",
    "blockchain",
    "ethereum",
    "smart-contracts",
    "quikdb"
  ],
  "author": "QuikDB Team",
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.9.14",
    "@grpc/proto-loader": "^0.7.10",
    "ethers": "^6.8.1",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "express": "^4.18.2",
    "prometheus-api-metrics": "^3.2.2",
    "prom-client": "^15.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "rate-limiter-flexible": "^4.0.1",
    "ioredis": "^5.3.2",
    "zod": "^3.22.4",
    "node-cache": "^5.1.2",
    "google-protobuf": "^3.21.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/google-protobuf": "^3.15.12",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "grpc-tools": "^1.12.4",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "@grpc/grpc-js": "^1.9.14",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "eslint": "^8.53.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
