{
  "name": "quikdb-nodes-sdk",
  "version": "1.0.0",
  "description": "SDK for interacting with QuikDB Nodes smart contracts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "RUN_INTEGRATION_TESTS=true jest -c jest.integration.config.js",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build",
    "docs": "typedoc --out docs src",
    "extract-abis": "node ../scripts/extract-abis.js",
    "prebuild": "npm run extract-abis",
    "examples:basic": "ts-node examples/basic-usage.ts",
    "examples:compute": "ts-node examples/compute-provider.ts",
    "examples:storage": "ts-node examples/storage-provider.ts",
    "examples:consumer": "ts-node examples/resource-consumer.ts"
  },
  "keywords": [
    "quikdb",
    "blockchain",
    "sdk",
    "ethereum",
    "lisk"
  ],
  "author": "QuikDB Team",
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "dotenv": "^17.0.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "jest-environment-node": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.0",
    "typescript": "^5.1.6"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ]
}
